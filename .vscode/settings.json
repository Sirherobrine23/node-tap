{
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "files.eol": "\n",
  "files.trimFinalNewlines": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.encoding": "utf8",
  "files.exclude": {
    "**/.git": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
  },
  "files.associations": {
    "random": "cpp"
  },
  "cmake.configureOnOpen": false
}
